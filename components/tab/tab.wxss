.tab-box {
  position : fixed;
  z-index : 1000;
  right : 0;
  bottom : 0;
  left : 0;
  display : flex;
  align-items : center;
  width : 100%;
  height : 96rpx;
  background : #fff;
  box-shadow : 0 -4px 12px 0 rgba(0, 0, 0, .07);
}
.tab-box.safe-wrap {
  padding-bottom : 60rpx;
}
.tab {
  flex : 1;
  padding : 12rpx;
  text-align : center;
  position: relative;
}
.tab .image {
  display : block;
  width : 40rpx;
  height : 40rpx;
  margin : 0 auto;
}
.tab .text {
  font-size : 24rpx;
  display : block;
  text-align : center;
  color : #999;
  font-weight: 500;
  line-height: 34rpx;
}
.tab.active .text {
  color : var(--dark-color);
}
.tab .icon{
  position: absolute;
  right: 68rpx;
  top: 11rpx;
  width: 12rpx;
  height: 12rpx;
  background: red;
  border-radius: 50%;
}
