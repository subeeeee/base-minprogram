
.share-dialog-container {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  transform: translate3d(0, 0, 100rpx);
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items:flex-end;
}

.share-dialog-container .share-info-container {
  position: relative;
  width:100%;
  background: #FFF;
}

.share-btn-container {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.share-btn-container .share-item-container {
  width: 50%;
  height: 240rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align:center;
  flex-direction: column;
}


.share-btn-container .share-image {
  width: 60rpx;
  height: 50rpx;
}

.share-item-container:nth-child(2) .share-image{
  width: 48rpx;
  height: 44rpx;
}

.share-btn-container .share-msg {
  display: block;
  margin-top:10rpx;
  font-size: 28rpx;
  line-height: 1;
  color: #4a4a4a;
  text-align: center;
}

.share-dialog-container .close-btn {
  margin:0 26rpx;
  border-top:2rpx solid #f5f5f5;
  height: 157rpx;
  line-height: 157rpx;
  font-size: 28rpx;
  color: #4A4A4A;
 text-align:center;
}

.share-btn{
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align:center;
  background:none;
  
}