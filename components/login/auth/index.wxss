.openPhoneBox{
    position: fixed;
    width: 100%;
    height: 100%;
    background:rgba(0,0,0,0.5);
    top:0;
    left:0;
    z-index:100;
}
.contentBox{
    width:620rpx;
    height:560rpx;
    background: #fff;
    border-radius: 12rpx;
    position: fixed;
    z-index: 101;
    top:40%;
    left:50%;
    margin-left:-310rpx;
    margin-top: -280rpx;
}
.contentBox .title1{
    font-size: 48rpx;
    color: #4A4A4A;
    text-align:center;
    line-height:70rpx;
}
.contentBox .title2{
    font-size: 28rpx;
    color: #4A4A4A;
    text-align:center;
    line-height:70rpx;
}
.contentBox .btns{
    display:flex;
    text-align:center;
    height:80rpx;
    line-height:80rpx;
    margin:40rpx;
}
.noLogin{
    border: 2rpx solid #979797;
    border-radius: 10rpx;
    color: #9B9B9B;
    font-size:28rpx;
    flex:1;
    margin:0 20rpx;
    line-height:80rpx;
}
.loginBtn{
    background-image: linear-gradient(270deg, var(--light-color) 0%, var(--dark-color) 100%);
    border-radius: 10rpx;
    color: #fff;
    font-size:28rpx;
    flex:1;
    margin:0 20rpx;
    line-height:80rpx;
}
.contentBox .IconBox{
    width:100%;
    text-align:center;
    margin:80rpx 0 30rpx;
}
.contentBox .icon{
    width:var(--logo-width);
    height:100rpx;
    margin: 0 auto;
}




