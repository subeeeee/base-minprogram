@import '/assets/css/common.wxss';
page {
    background: #fff;
}

.form_box {
    padding: 10px 12px 0 12px;
    background: #fff;
    margin-bottom: 40rpx;
}

.label {
    font-size: 36rpx;
    margin: 30rpx 20rpx;
}

.form_item {
    /* height: 60px; */
    box-sizing: border-box;
    border-bottom: 1rpx solid #F5F5F5;
    line-height: 60px;
    padding: 0 15px 0 10px;
    display: flex;
}


.form_item .form_title {
    width: 95px;
    text-align: left;
    color: #9B9B9B;
    font-size: 16px;
    overflow: hidden;
}

.form_item .control {
    width: 100%;
    height: 100%;
    position: relative;
    flex: 1;
}

picker,
input,
.picker {
    width: 100%;
    height: 100%;
}

.control image {
    position: absolute;
}

.despText {
    font-size: 24rpx;
    color: #9b9b9b;
    margin: 10rpx 20rpx;
}

.dateQuantum {
    width: 100%;
    height: 38%;
    position: fixed;
    z-index: 1;
    bottom: 0;
    left: 0;
    background: #fff;
    text-align: center;
    line-height: 60rpx;
    overflow: auto;
}

.dateQuantum .qBtn {
    width: 100%;
    height: 70rpx;
    background: #fff;
    position: fixed;
}

.dateQuantum .tiemView .time:hover {
    color: #1586ee;
}

.dateQuantum .qBtn span {
    font-size: 32rpx;
    color: #666;
    padding: 20rpx 30rpx;
}

.dateQuantum .qBtn span.cancel {
    float: left;
}

.dateQuantum .qBtn span.save {
    float: right;
    color: #1586ee;
}

.red {
    color: red;
}

.arrowAddr {
    position: absolute;
    width: 20rpx;
    height: 28rpx;
    top: 44rpx;
    right: 0;
}

