@import '/assets/css/common.wxss';
page {
    background: #fff;
}

.form_box {
    padding: 10px 12px 0 12px;
    background: #fff;
    margin-bottom: 40rpx;
}

.label {
    font-size: 36rpx;
    margin: 30rpx 20rpx;
}

.form_item {
    /* height: 60px; */
    box-sizing: border-box;
    border-bottom: 1px solid #F5F5F5;
    line-height: 60px;
    padding: 0 15px 0 10px;
    display: flex;
}

.form_item .form_title {
    width: 95px;
    text-align: left;
    color: #9B9B9B;
    font-size: 16px;
    overflow: hidden;
}

.form_item .control {
    width: 100%;
    height: 100%;
    position: relative;
    flex: 1;
}

picker,
input,
.picker {
    width: 100%;
    height: 100%;
}
.arrowAddr{
  position:absolute;
  width:20rpx;
  height:28rpx;
  top:44rpx;
  right:0;
}
.red {
    color: red;
}
