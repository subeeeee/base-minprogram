@import '/assets/css/common.wxss';
page {
    background: #fff;
}

picker,
input,
.picker {
    width: 100%;
    height: 100%;
}

.control image {
    position: absolute;
}

.btn {
    color: #fff;
    width: 90%;
    height: 80rpx;
    background: linear-gradient(270deg, rgba(51, 184, 249, 1) 0%, rgba(23, 130, 240, 1) 100%);
    border-radius: 5px;
    margin: 100rpx auto 0 auto;
    text-align: center;
    line-height: 80rpx;
    font-size: 28rpx;
}

.item {
    overflow: hidden;
    margin-left: 20rpx;
    padding-top: 33rpx;
    border-top: 2rpx solid #f5f5f5;
    margin-bottom: 30rpx;
}

.item .division {
    width: 2rpx;
    height: 24rpx;
    background: #D8D8D8;
    margin-right: 30rpx;
    margin-top: 14rpx;
}

.item view {
    float: left;
    font-size: 31rpx;
    line-height: 44rpx;
    height: 44rpx;
}

.lTitle {
    color: #4a4a4a;
    margin-right: 28rpx;
}

.rText {
    color: #9B9B9B;
}

.radio {
    margin-bottom: 32rpx;
    overflow: hidden;
    margin-left: 100rpx;
}

.radio image {
    width: 32rpx;
    height: 32rpx;
    margin-right: 92rpx;
    margin-top: 6rpx;
}

.radio view,
.radio image {
    float: left;
    line-height: 44rpx;
    font-size: 32rpx;
    color: #4a4a4a;
}

.uploadList {
    text-align: center;
    margin-top: 30rpx;
}

.uploadList>view {
    position: relative;
    width: 100rpx;
    height: 100rpx;
    display: inline-block;
    margin: 0 auto;
    padding-right: 60rpx;
}

.upload {
    width: 100rpx;
    height: 100rpx;
    border-radius: 12rpx;
}

.removeIcon {
    width: 32rpx;
    height: 32rpx;
    position: absolute;
    right: 44rpx;
    top: -16rpx;
}


.red {
    color: red;
}

.uploadPic{
    border-bottom:1rpx solid #f5f5f5;
    padding-bottom:20rpx;
}