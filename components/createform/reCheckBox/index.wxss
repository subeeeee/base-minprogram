@import '/assets/css/common.wxss';
page {
    background: #fff;
}

.form_box {
    padding: 10px 12px 0 12px;
    background: #fff;
    margin-bottom: 40rpx;
}

.label {
    font-size: 36rpx;
    margin: 30rpx 20rpx;
}

.form_item {
    /* height: 60px; */
    box-sizing: border-box;
    border-bottom: 1px solid #F5F5F5;
    line-height: 60px;
    padding: 0 15px 0 10px;
    display: flex;
}


.form_item .form_title {
    width: 95px;
    text-align: left;
    color: #9B9B9B;
    font-size: 16px;
}

.form_item .control {
    width: 100%;
    height: 100%;
    position: relative;
    flex: 1;
    overflow: hidden;
}

picker,
input,
.picker {
    width: 100%;
    height: 100%;
}

.control image {
    position: absolute;
}

.btn {
    color: #fff;
    width: 90%;
    height: 80rpx;
    background: linear-gradient(270deg, rgba(51, 184, 249, 1) 0%, rgba(23, 130, 240, 1) 100%);
    border-radius: 5px;
    margin: 100rpx auto 0 auto;
    text-align: center;
    line-height: 80rpx;
    font-size: 28rpx;
}

.item {
    overflow: hidden;
    margin-left: 20rpx;
    padding-top: 33rpx;
    border-top: 2rpx solid #f5f5f5;
    margin-bottom: 30rpx;
}

.item .division {
    width: 2rpx;
    height: 24rpx;
    background: #D8D8D8;
    margin-right: 30rpx;
    margin-top: 14rpx;
}

.item view {
    float: left;
    font-size: 31rpx;
    line-height: 44rpx;
    height: 44rpx;
}

.lTitle {
    color: #4a4a4a;
    margin-right: 28rpx;
}

.rText {
    color: #9B9B9B;
}

.mask {
    width: 100%;
    height: 100%;
    background: #000;
    opacity: .5;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 10;
}

.desc {
    font-size: 32rpx;
    line-height: 60rpx;
}


.bottom view {
    width: 50%;
    float: left;
    text-align: center;
    line-height: 120rpx;
    font-size: 36rpx;
}

.bottom .l {
    color: #9B9B9B;
    border-right: 2rpx solid #9B9B9B;
    box-sizing: border-box;
}

.bottom .r {
    color: #1586EE;
}

.notice {
    font-size: 24rpx;
    color: #d30d25;
    margin-left: 20rpx;
    border-bottom: 2rpx solid #f5f5f5;
    padding-bottom: 20rpx;
}

.noborder {
    border: 0
}

.despText {
    font-size: 24rpx;
    color: #9b9b9b;
    margin: 10rpx 20rpx;
}

.dateQuantum {
    width: 100%;
    height: 38%;
    position: fixed;
    z-index: 1;
    bottom: 0;
    left: 0;
    background: #fff;
    text-align: center;
    line-height: 60rpx;
    overflow: auto;
    padding-bottom: 20rpx;
}

.dateQuantum .qBtn {
    width: 100%;
    height: 70rpx;
    background: #fff;
    position: fixed;
}

.dateQuantum .tiemView .time:hover {
    color: #1586ee;
}

.dateQuantum .qBtn span {
    font-size: 32rpx;
    color: #666;
    padding: 20rpx 30rpx;
}

.dateQuantum .qBtn span.cancel {
    float: left;
}

.dateQuantum .qBtn span.save {
    float: right;
    color: #1586ee;
}

.quantumBg {
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1;
}

.red {
    color: red;
}

.arrowAddr {
    position: absolute;
    width: 20rpx;
    height: 28rpx;
    top: 44rpx;
    right: 0;
}

.projectView {
    margin: 40px auto 0;
    padding: 0 30rpx;
}

.singleView {
    width: 47.6%;
    float: left;
    border: 2rpx solid #e4e4e4;
    margin: 2% 3% 0 0;
    height: 60rpx;
    overflow: hidden;
}

.singleView.selected {
    border: 2rpx solid #1890ff;
    color: #1890ff;
}

.singleView:nth-child(2n) {
    margin-right: 0;
}
.pd-r-20{
    padding-right:20rpx;
}