.ul{
    padding: 0 20rpx;
    box-sizing: border-box;
}
.li{
    width: 100%;
    height: 160rpx;
    overflow: hidden;
    box-sizing: border-box;
}
.li image{
    float: left;
    margin-left: 40rpx;
    width: 80rpx;
    height: 80rpx;
    margin-right: 28rpx;
    border-radius: 50%;
    margin-top: 50rpx;
}
.li .content{
    padding-top: 50rpx;
    float: left;
    position: relative;
    border-bottom: 2rpx solid #F5F5F5;
    width: 560rpx;
    height: 100%;
    box-sizing: border-box;
}
.content .name{
    color: #4A4A4A;
    font-size: 32rpx;
    line-height: 44rpx;
    height: 44rpx;
    margin-bottom: 2rpx;
}
.content .desc{
    color: #9B9B9B;
    font-size: 24rpx;
    line-height: 34rpx;
    height: 34rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.content .time{
    position: absolute;
    right: 18rpx;
    bottom: 64rpx;
    color: #9B9B9B;
    font-size: 24rpx;
}
.goTop{
    top: 0rpx;
    transition: top 0.5s;
    padding-bottom: 104rpx!important;
}
.goTopX{
    top: 0rpx;
    transition: top 0.5s;
    padding-bottom: 140rpx!important;
}
.goback{
     top: 128rpx;
     transition: top 0.5s;
 }

.chat_noChat{
    text-align: center;
    font-size: 30rpx;
    color: #9B9B9B;
    margin-top: 200rpx;
}
.em-msgNum {
    position: absolute;
    right: 40rpx;
    top: 100rpx;
    min-width: 28rpx;
    height: 28rpx;
    border-radius: 14rpx;
    background: #f04134;
    color: #fff;
    line-height: 28rpx;
    font-size: 24rpx;
    text-align: center;
}
.messagePic{
    width:100%;
    height:200rpx;
}
.messagePic image{
    width:300rpx;
    height:200rpx;
}