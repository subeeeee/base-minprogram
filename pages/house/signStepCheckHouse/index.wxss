@import '/assets/css/common.wxss';
.topSteps {
  background: #FFFFFF;
  padding-bottom: 20px;
}

.form_box {
  background: #FFFFFF;
  padding: 20px 0;
}
.form_box .form_item {
  height: 50px;
  line-height: 30px;
  font-size: 12px;
}
.form_item .t {
  float: left;
  width: 90px;
  text-align: right;
  color: #4A4A4A;
}
.t>text{
  color: #FF0000;
}

.control {
  margin-left: 105px;
  margin-right: 15px;
}
.control input {
  height: 30px;
  line-height: 30px;
  background: #F6F6F6;
  padding: 0 10px;
}

.botBtnBox {
  display: flex;
  padding: 50px;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
}
.botBtnBox text {
  width: 100%;
  margin: 0 20px;
  height: 40px;
  line-height: 40px;
  text-align: center;
  border: 1px solid var(--dark-color);
  border-radius: 40px;
  background: var(--dark-color);
  color: #FFFFFF;
}
.botBtnBox text:first-child {
   color: var(--dark-color);
   background: #FFFFFF;
 }

.botBtnBox text:last-child {
   background: var(--dark-color);
   color: #FFFFFF;
 }
