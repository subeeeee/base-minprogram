@import '/assets/css/common.wxss';
.container {
  position : relative;
  /*overflow : hidden;*/
  box-sizing : border-box;
  height : 100vh;
}

/* 顶部搜索条 */
 
.top-bar-box {
  width: 100%;
  height: 55px;
  background: #ffffff;
  box-sizing: border-box;
  padding: 10px 12px;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 100;
}

.top-bar {
  width: var(--home-index-width);
  height: 70rpx;
  margin: 0 auto;
  background: #f5f5f5;
  box-sizing: border-box;
  border-radius: 8rpx;
  overflow: hidden;
}

.top-bar-box .city-wrap {
  float: left;
  margin-left: 32rpx;
  margin-top: 20rpx;
  height: 30rpx;
  font-size: 28rpx;
  line-height: 30rpx;
  padding-right: 22rpx;
  border-right: 2rpx solid #d8d8d8;
  color: #4a4a4a;
}
.top-bar-box .city-input{
  float: left;
}
.top-bar-box .query-icon {
  float: left;
  margin-left: 18rpx;
  margin-top: 22rpx;
  width: 28rpx;
  height: 28rpx;
}

.top-bar-box .city-wrap image {
  width: 20rpx;
  height: 20rpx;
  margin-left: 22rpx;
}

.top-bar-box .input-wrap {
  float: left;
  line-height: 40rpx;
  height: 40rpx;
  margin-left: 24rpx;
  margin-top: 16rpx;
  font-size: 28rpx;
}

.place-holder {
  color: #bdbdbd;
}

/* tab */

.house-list-content {
  box-sizing : border-box;
  height : 100%;
  position: absolute;
  width: 100%;
  left: 0;
  top: 55px;
}
/* 房源列表 */
.house-list-wrap {
  height : calc(100% - 76rpx);
}
.tab-scroll {
  width: var(--home-index-width);
  height : 100%;
  padding: 20rpx 0rpx;
  box-sizing: border-box;
  padding-bottom: 18vh;
  margin:0 auto;
}
.houst-list{
  padding-bottom: 30vh;
  box-sizing: border-box;

}

.project-item .content {
  width: calc(100% - 345rpx);
}