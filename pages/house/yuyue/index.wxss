@import '/assets/css/common.wxss';
page{
  background: #F5F6F8;
}
.form_box {
  padding: 10px 12px 0 12px;
  background: #fff;
  margin-bottom: 40rpx;
}
.label{
  font-size: 36rpx;
  margin: 30rpx 20rpx;
}
.form_item{
  height: 60px;
  box-sizing: border-box;
  border-top: 1px solid #F5F5F5;
  line-height: 60px;
  padding: 0 10px;
  display: flex;
}
.form_item:last-child{
  border-bottom: 0;
}
.form_item .form_title{
  width: 95px;
  text-align: left;
  color: #9B9B9B;
  font-size: 16px;
}
.form_item .control{
  width: 100%;
  height: 100%;
  position: relative;
  flex: 1;
}
picker,input{
  width: 100%;
  height: 100%;
}
.control image{
  position: absolute;
}
.btn{
  color: #fff;
  width: 600rpx;
  height: 80rpx;
 background-image: linear-gradient(270deg, var(--light-color) 0%, var(--dark-color) 100%);
  border-radius:5px;
  margin: 300rpx auto 0 auto;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
}
.item{
  overflow: hidden;
  margin-left: 20rpx;
  padding-top: 33rpx;
  border-top: 2rpx solid #f5f5f5;
  margin-bottom: 30rpx;
}
.item .division {
  width: 2rpx;
  height: 24rpx;
  background: #D8D8D8;
  margin-right: 30rpx;
  margin-top: 14rpx;

}
.item view{
  float: left;
  font-size: 32rpx;
  line-height: 44rpx;
  height: 44rpx;
}
.lTitle{
  color: #4a4a4a;
  margin-right: 28rpx;
}
.rText {
  color: #9B9B9B;
}
.radio{
  margin-bottom: 32rpx;
  overflow: hidden;
  margin-left: 100rpx;
}
.radio image{
  width: 32rpx;
  height: 32rpx;
  margin-right: 92rpx;
  margin-top: 6rpx;
}
.radio view, .radio image{
  float: left;
  line-height: 44rpx;
  font-size: 32rpx;
  color: #4a4a4a;
}
.uploadList{
  text-align: center;
}
.uploadList > view{
  position: relative;
  width: 100rpx;
  height: 100rpx;
  display: inline-block;
  margin: 0 auto;
  padding-right: 60rpx;
}
.upload{
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
}
.removeIcon{
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  right: 44rpx;
  top: -16rpx;
}
.msg{
  width: 600rpx;
  font-size: 24rpx;
  line-height: 34rpx;
  color: #9B9B9B;
  margin: 60rpx auto 40rpx auto;
}
.mask{
  width: 100%;
  height: 100%;
  background: #000;
  opacity: .5;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 10;
}
.modal{
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 640rpx;
  height: 680rpx;
  z-index: 20;
  padding: 60rpx 34rpx 0 34rpx;
  box-sizing: border-box;
  color: #4A4A4A;
  background: #fff;
  border-radius: 12rpx;
}

.modal > .title{
  text-align: center;
  font-size: 36rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-bottom: 30rpx;
}
.desc{
  font-size: 32rpx;
  line-height: 60rpx;
}
.modal .bottom{
  position: absolute;
  left: 0;
  bottom: 0;
  height: 120rpx;
  border-top: 2rpx solid #9B9B9B;
  box-sizing: border-box;
  overflow: hidden;
  width: 100%;
}
.bottom view{
  width: 50%;
  float: left;
  text-align: center;
  line-height: 120rpx;
  font-size: 36rpx;
}
.bottom .l{
  color: #9B9B9B;
  border-right: 2rpx solid #9B9B9B;
  box-sizing: border-box;
}
.bottom .r{
  color: var(--dark-color);
}
