@import '/assets/css/common.wxss';
.container.bottom-bar-member{
  margin-bottom: 195rpx;
}
/* 顶部搜索条 */
.top-bar-box {
    width: 100%;
    border-radius: 0 0 50% 50%;
    box-sizing: border-box;
    padding-top: 30rpx;
}
.card{
    width: 680rpx;
    /*height: 520rpx;*/
    background: #fff;
    box-shadow: 0 0 10rpx 0 rgba(0,0,0,0.10);
    border-radius: 4rpx;
    margin: 0 auto;
}
.card-userinfo{
    position: relative;
    display: flex;
}
.card-userinfo-before{
    position: absolute;
    right:0;
    top:0;
    content: '';
    width: 200rpx;
    height: 180rpx;
    background-repeat: no-repeat;
    background-position: left top;
    background-size:200rpx 180rpx;
    z-index: 10;
  }

.userInfo{
    position: relative;
    width: 260rpx;
    height: 258rpx;
    margin: 32rpx 40rpx 0 26rpx;
    overflow: hidden;
    text-align:center;


    background-repeat: no-repeat;
    background-position: left top;
    background-size:260rpx 258rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.userInfo-before{
  position: absolute;
  left: 1rpx;
  top: 2rpx;
  content: '';
  width: 70rpx;
  height: 70rpx;
  background-repeat: no-repeat;
  background-position: left top;
  background-size:70rpx 70rpx;
  z-index: 10;
}
.userInfo .headImg{
    width: 210rpx;
    height: 210rpx;
}
.ul{
    margin-top:80rpx;
    box-sizing: border-box;
    width: 350rpx;
    position: relative;
    z-index: 11;
}
.ul .li{
    display: flex;
    height: 50rpx;
    /* overflow: hidden; */
    line-height: 50rpx;
    position: relative;
}
.ul .name{
    margin-bottom: 20rpx;
    font-size:36rpx;
    color:#4A4A4A;
    line-height: 46rpx;
    flex:0 0 120rpx;
}
.ul .zhiwu{
    margin-left:26rpx;
    margin-right: 10rpx;
    color: #9b9b9b;
    font-size: 24rpx;
    line-height: 46rpx;
    white-space: nowrap;
    text-overflow:ellipsis;
    overflow: hidden;
}
.li .label{
  margin-top:6rpx;
    width: 30rpx;
    overflow: hidden;
    position: relative;
    flex: 0 0 30rpx;
}
.label image{
    width:30rpx;
    height: 30rpx;
}
.li .text{
    margin:0 20rpx;
    font-size: 24rpx;
    color: #4A4A4A;
    white-space: nowrap;
    text-overflow:ellipsis;
    overflow: hidden;
}
.li .gotoEdit{
      position: absolute;
      right:42rpx;
      width: 32rpx;
      height: 32rpx;
      background-position: right center;
      background-size: 32rpx;
      background-repeat: no-repeat;
      top: -40rpx;
      z-index: 11;
}
.wxcode{
    width: 48rpx;
    height: 48rpx;
    top: 34rpx;
    position: absolute;
    right: 0;
}


.interests-list{
    display: flex;
    justify-content: space-between;
    margin:0 50rpx;
}
.interests-item{
    margin:20rpx 0;
    display: flex;

}
.interests-item .img{
    width: 20rpx;
    height: 26rpx;
}
.interests-item:nth-child(2) .img{
  width: 20rpx;
  height: 24rpx;
}
.interests-item:nth-child(3) .img{
  margin-top:2rpx;
  width: 24rpx;
  height: 22rpx;
}
.interests-item:nth-child(4) .img{
  margin-top:2rpx;
  width: 20rpx;
  height: 22rpx;
}
.interests-item .txt{
  margin-left: 12rpx;
  font-size: 20rpx;
  color: #9B9B9B;
}

.switch-show-hide{
    display: flex;
    margin:20rpx 0;
    justify-content: center;
 

}
.switch-show-hide .text{
    padding-right:36rpx;
    text-align:center;
    font-size: 24rpx;
    color: #4A4A4A;
    line-height: 54rpx;
    background-position: right center;
    background-size:16rpx 8rpx;
    background-repeat: no-repeat;
}
.height20{
    height: 20rpx;
}
.gray{
    background:#f5f5f5;
}

.recommended{
    margin-bottom:160rpx;
    padding:40rpx;
    padding-bottom: 0;
} 
.recommended .title{
    padding-bottom:30rpx;
    font-size: 40rpx;
    color: #4A4A4A;

}


/* 底部按钮 */

.my-bottom-ctrl-wrap{
    width: 100%;
    height: 160rpx;
    position: fixed;
    left: 0;
    bottom: 0;
    background: #fff;
    box-sizing: border-box;
    padding-top: 40rpx;
    padding-left: 30rpx;
  }
  .my-bottom-ctrl-wrap view{
    float: left;
    font-size: 28rpx;
    color: #fff;
  }
  .my-bottom-ctrl-wrap image{
      display: block;
    width: 36rpx;
    height: 36rpx;
    margin: 0 auto 10rpx;
  }
  .my-bottom-ctrl-wrap .shareIcon{
    color: #4A4A4A;
    font-size: 24rpx;
  }
  .my-bottom-ctrl-wrap .shareIcon{
    background: none;
    height: 80rpx;
    /* line-height: 72rpx; */
  }

  .my-bottom-ctrl-wrap .btn{
    width: 270rpx;
    height: 80rpx;
    border-radius: 10rpx;
    text-align: center;
    line-height: 80rpx;
    background:var(--dark-color);
  }

  .btn-margin{
    margin-left:40rpx;
    margin-right: 20rpx;
  }
  .my-bottom-ctrl-wrap .btn:last-child{
    background:var(--dark-color);
  }


