.list{
    overflow: hidden;
    padding-left: 46rpx;
    padding-top: 20px;
    margin-bottom: 160rpx;
}

.topic-item{
    overflow: hidden;
    padding-bottom: 28rpx;
    border-bottom: 2rpx solid #F5F5F5;
    padding-top:20rpx;
}
.topic-item:last-child{
    border: 0;
}
.topic-item > .left{
    float: left;
    width: 396rpx;
    margin-right: 24rpx;
}
.topic-item > .left > .title{
    color: #4A4A4A;
    font-size: 32rpx;
    height: 44rpx;
    line-height: 44rpx;
    margin-bottom: 20rpx;
    white-space: nowrap;
    text-overflow:ellipsis;
    width: 100%;
    overflow: hidden;
    font-weight: 500;
}
.topic-item > .left > .desc{
    color: #4A4A4A;
    font-size: 24rpx;
    line-height: 34rpx;
    margin-bottom: 2rpx;
    line-clamp: 2;
    box-orient: vertical;
    overflow: hidden;
    width: 100%;
    min-height: 80rpx;
    font-weight: 400;
}
.topic-item > .left > .date{
    color: #9B9B9B;
    font-size: 24rpx;
    height: 34rpx;
    line-height: 34rpx;
    width: 100%;
}
.topic-item > .right{
    width: 240rpx;
    height: 180rpx;
    float: left;
}
.topic-item > .right > image{
    border-radius: 12rpx;
    width: 240rpx;
    height: 180rpx;
}

.btns{
    width: 100%;
    height: 160rpx;
    text-align: center;
    position: fixed;
    left: 0;
    bottom: 0;
    display: flex;
    background: #fff;
    padding-top: 40rpx;
    box-sizing: border-box;
    border-top: 2rpx solid #bbb;
}
.btns view{
    width: 280rpx;
    height: 80rpx;
    color: #fff;
    font-size: 28rpx;
    line-height: 80rpx;
    border-radius: 10rpx;
}
.btns view:first-child{
    margin-right: 40rpx;
    margin-left: 76rpx;
        /* background:linear-gradient(270deg,rgba(255,146,80,1) 0%,rgba(252,99,57,1) 100%); */
    background:var(--dark-color);
}
.btns view:last-child {
    /* background: linear-gradient(90deg, rgba(26, 135, 241, 1) 0%, rgba(49, 181, 249, 1) 100%); */
    background:var(--dark-color);
}
