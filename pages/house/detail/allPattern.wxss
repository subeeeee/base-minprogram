.list{
    overflow: hidden;
    padding-left: 46rpx;
    padding-top: 20px;
    padding-bottom: 160rpx;
}
.item{
    width: 320rpx;
    margin-right: 20px;
    margin-bottom: 20px;
    float: left;
}
.item:nth-child(2n+0){
    margin-right: 0;
}
.item image{
    width: 320rpx;
    height: 260rpx;
    margin-bottom: 18rpx;
}
.item .name{
    font-size: 32rpx;
    height: 44rpx;
    line-height: 44rpx;
    margin-bottom: 14rpx;
    font-weight: 500;
    color: #4A4A4A;
    width: 100%;
}
.item .desc{
    color: #9B9B9B;
    font-size: 28rpx;
    height: 40rpx;
    line-height: 40rpx;
    margin-bottom: 12rpx;
    font-weight: 400;
    width: 100%;
}
.item .price{
    color: #D0021B;
    font-size: 32rpx;
    height: 44rpx;
    line-height: 44rpx;
    font-weight: 500;
    width: 100%;
}
.btns{
    width: 100%;
    height: 160rpx;
    text-align: center;
    position: fixed;
    left: 0;
    bottom: 0;
    display: flex;
    background: #fff;
    padding-top: 40rpx;
    box-sizing: border-box;
    border-top: 2rpx solid #bbb;
}
.btns view{
    width: 280rpx;
    height: 80rpx;
    color: #fff;
    font-size: 28rpx;
    line-height: 80rpx;
    border-radius: 10rpx;
}
.btns view:first-child{
    margin-right: 40rpx;
    margin-left: 76rpx;
        /* background:linear-gradient(270deg,rgba(255,146,80,1) 0%,rgba(252,99,57,1) 100%); */
    background:var(--dark-color);
}
.btns view:last-child {
    /* background: linear-gradient(90deg, rgba(26, 135, 241, 1) 0%, rgba(49, 181, 249, 1) 100%); */
    background:var(--dark-color);
}
.tab{
    padding-top: 52rpx;
    width: 700rpx;
    margin: 0 auto;
    border-bottom: 2rpx solid #f5f5f5;
    box-sizing: border-box;
    height: 140rpx;
    overflow-x: auto;
    white-space: nowrap;
}
.tab > view{
    display: inline-block;
    font-size: 32rpx;
    color: #4A4A4A;
    width: 25%;
    text-align: center;
}
.tab .bottomBorder{
    width: 60rpx;
    height: 8rpx;
    border-radius: 6rpx;
    background: none;
    margin: 0 auto;
}
.tab .active{
    color: var(--dark-color);
}
.active .bottomBorder{
    background: var(--dark-color);
}
