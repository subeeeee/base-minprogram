.info {
  padding: 0 15px;
  padding-bottom: 10px;
  background: #FFFFFF;
}
.info>text {
  display: block;
  line-height: 1.2;
  padding: 10px 0;
}

.info>.title {
  font-size: 16px;
}

.info>.site {
  font-size: 14px;
}

.info>.price {
  font-size: 18px;
  color: var(--dark-color);
  padding-bottom: 30px;
  border-bottom: 1rpx solid #ebebeb;
}




.swiper {
  width: 100%;
  height: 180px;
}
.swiper .img {
  width: 100%;
  height: 100%
}

.form_box {
  background: #FFFFFF;
  padding: 20px 0;
}
.form_box>.form_item {
  height: 50px;
  line-height: 30px;
  font-size: 12px;
}
.form_item>.t {
  float: left;
  width: 90px;
  text-align: right;
  color: #4A4A4A;
}

.form_item>.control {
  margin-left: 105px;
  margin-right: 15px;
}
.control>input {
  height: 30px;
  line-height: 30px;
  background: #F6F6F6;
  padding: 0 10px;
}

.botBtnBox {
  display: flex;
  padding: 20px 50px;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
  background: #FFFFFF;
}
.botBtnBox > text {
  width: 100%;
  margin: 0 20px;
  height: 40px;
  line-height: 40px;
  text-align: center;
  border: 1rpx solid var(--dark-color);
  border-radius: 40px;
}
.botBtnBox > text:first-child {
   color: var(--dark-color);
   background: #FFFFFF;
 }

.botBtnBox > text:last-child {
   background: var(--dark-color);
   color: #FFFFFF;
 }
