
.flex{
  display: flex;
}
.flex-align-item-center{
  align-items: center;
}
.banner{
  display: block;
  width:100%;height:300rpx;
}
.height100{
  height:100rpx;
}

.dl{
  display: flex;
  margin:0 24rpx;
  border-bottom: 1rpx solid #EEEEEE;
  line-height: 100rpx;
  font-size: 28rpx;
}
.dt{
  color: #4A4A4A;
}
.dd-flex{
  flex:1;
}
.dd input::placeholder{
  color:#bdbdbd;
}
.dd input{
  display: block;
  padding:30rpx;
}
.radio-btn{
  margin-left:30rpx;
  width: 80rpx;
  height: 42rpx;
  line-height: 42rpx;
  text-align:center;
  background:#fff;
  border-radius: 6px;
  font-size: 24rpx;
  color: var(--dark-color);
  border:1rpx solid var(--dark-color);
}
.radio-btn.active{
  background: var(--dark-color);
  color: #FFFFFF;
}
.color{
  color: var(--dark-color);
}
.agreement{
  margin:30rpx 0rpx 30rpx 30rpx;
  font-size: 28rpx;

}
.save-btn{
  margin:100rpx auto 0;
  width: 600rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-image: linear-gradient(270deg, var(--light-color) 2%, var(--dark-color) 100%);
  border-radius: 10rpx;
  color: #fff;
  font-size: 28rpx;
  text-align:center;
}
.h2{
  /* font-size: 36rpx; */
  color: #4A4A4A;
}


