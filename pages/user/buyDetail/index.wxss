@import '/assets/css/common.wxss';
.rengouzhong{
    background: var(--dark-color);
}
.yiwancheng{
    background: #50D1B6;
}
.weirengou{

}
.yiquxiao{
    background: #FE897B;
}
page{
    background: #F5F5F5;
}
.top{
    width: 100%;
    height: 260rpx;
    margin-bottom: 20rpx;
    background: #fff;
    padding: 32rpx 0 28rpx 26rpx;
    box-sizing: border-box;
    overflow: hidden;
    position: relative;
}
.top .minIcon{
    width: 100rpx;
    height: 40rpx;
    border-radius: 0 26rpx 26rpx 0;
    color: #fff;
    font-size: 24rpx;
    text-align: center;
    line-height: 40rpx;
    position: absolute;
    left: 26rpx;
    top: 50rpx;
}
.top image{
    width: 270rpx;
    height: 200rpx;
    border-radius: 12rpx;
    margin-right: 34rpx;
    float: left;
}
.top .content{
    float: left;
    color: #4A4A4A;
    font-size: 32rpx;
    font-weight: 400;
}
.content view{
    margin-bottom: 16rpx;
    height: 44rpx;
    line-height: 44rpx;
    font-size: 32rpx;
}
.content .title{
    height: 50rpx;
    line-height: 50rpx;
    font-weight: 500;
    font-size: 36rpx;
    margin-bottom: 18rpx;
}
.list{
    padding: 0 24rpx;
    box-sizing: border-box;
    background: #fff;
}
.list .item{
    width: 100%;
    height: 100rpx;
    border-bottom: 2rpx solid #f5f5f5;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 100rpx;
    font-size: 32rpx;
    padding-left: 14rpx;
}
.item .title{
    float: left;
    color: #9B9B9B;
    font-size: 32rpx;
}
.item .text{
    float: right;
    color: #4A4A4A;
}
.btn{
    margin: 100rpx auto 50rpx auto;
    width: 600rpx;
    height: 80rpx;
    color: #fff;
    text-align: center;
    line-height: 80rpx;
    background: linear-gradient(270deg, var(--light-color) 0%, var(--dark-color) 100%);
    border-radius: 10rpx;
}
