@import '/assets/css/common.wxss';
.list{
    padding: 30rpx 24rpx 30rpx 24rpx;
}
.list .item{
    margin-bottom: 30rpx;
    overflow: hidden;
    position: relative;
    padding-bottom: 30rpx;
    border-bottom: 2rpx solid #f5f5f5;
}
.list .item:last-child{
    border-bottom: 0;
}
.item .minIcon{
    width: 100rpx;
    height: 40rpx;
    border-radius: 0 26rpx 26rpx 0;
    color: #fff;
    font-size: 24rpx;
    text-align: center;
    line-height: 40rpx;
    position: absolute;
    left: 0;
    top: 20rpx;
}
.item image{
    width: 270rpx;
    height: 200rpx;
    float: left;
    margin-right: 30rpx;
    border-radius: 12rpx;
}
.item .content{
    float: left;
    color: #4A4A4A;
    font-size: 32rpx;
    font-weight: 400;
    width: 400rpx;
}
.content view{
    margin-bottom: 16rpx;
    height: 44rpx;
    line-height: 44rpx;
    font-size: 32rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.content .title{
    height: 50rpx;
    line-height: 50rpx;
    font-weight: 500;
    font-size: 36rpx;
    margin-bottom: 18rpx;
}
