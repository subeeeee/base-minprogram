@import '/assets/css/common.wxss';
.container>.tabs{
    padding: 0 24rpx;
    font-size: 32rpx;
    color: #4A4A4A;
    height: 140rpx;
    line-height: 140rpx;
    overflow: hidden;
}
.container>.tabs view{
    float: left;
    width: 50%;
    text-align: center;
}
.container>.tabs .active{
    color: var(--dark-color);
    border-bottom: 8rpx solid var(--dark-color);
    border-radius: 6rpx;
    padding-bottom: 4rpx;
}
.list{
    padding: 0rpx 24rpx 30rpx 24rpx;
}
.list .item{
    margin-bottom: 30rpx;
    overflow: hidden;
    position: relative;
    padding-top: 30rpx;
    border-top: 2rpx solid #f5f5f5;
}
.item image{
    width: 270rpx;
    height: 200rpx;
    float: left;
    margin-right: 30rpx;
    border-radius: 12rpx;
}
.item .content{
    float: left;
    color: #4A4A4A;
    font-size: 32rpx;
    font-weight: 400;
    width: 370rpx;
}
.content view{
    font-size: 24rpx;
}
.content .title{
    height: 50rpx;
    line-height: 50rpx;
    font-weight: 500;
    font-size: 36rpx;
    margin-bottom: 12rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.house-list-wrap {
    height : calc(100% - 76rpx);
    padding: 0 26rpx;
}
.tab-scroll {
    width : 100%;
    height : 100%;
    padding: 14px;
    box-sizing: border-box;
}
.houst-list{
    /* margin-bottom: 100px; */
}
.project-item {
    width: 100%;
    padding-top: 30rpx;
    margin-bottom: 30rpx;
    border-top: 2rpx solid #F5F5F5;
    overflow: hidden;
}
.project-item:last-child{
    border-bottom: 0;
}
.project-item image{
    float: left;
    width: 270rpx;
    height: 200rpx;
    margin-right: 34rpx;
    border-radius: 12rpx;
}
.project-item .content{
    float: left;
    width: 390rpx;
}
.project-item .content .name{
    color: #4A4A4A;
    font-size: 36rpx;
    height: 50rpx;
    line-height: 50rpx;
    margin-bottom: 6rpx;
    font-weight: 500;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.project-item .content .desc{
    color: #7D7D7D;
    font-size: 28rpx;
    height: 40rpx;
    line-height: 40rpx;
    font-weight: 400;
    margin-bottom: 18rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.project-item .content .tabs{
    margin-bottom: 10rpx;
    overflow: hidden;
    font-weight: 400;
    font-size: 24rpx;
    height: 37rpx;
}
.content .tabs view{
    float: left;
    color: #9B9B9B;
    border: 2rpx solid #9B9B9B;
    border-radius: 4rpx;
    margin-right: 10rpx;
    padding: 0 6rpx;
    height: 32rpx;
    line-height: 32rpx;
    margin-bottom: 20rpx;
}
.content .tabs .status{
    color: #fff;
    background: var(--dark-color);
    border: 2rpx solid var(--dark-color);
}
.tabs .status.waitFor{
    background: #ffac24;
    border: 2rpx solid #ffac24;
}
.tabs .status.shouqing{
    background: #f94641;
    border: 2rpx solid #f94641;
}
.tabs .status.zanwu{
    background: #9b9b9b;
    border: 2rpx solid #9b9b9b;
}
.project-item .content .price{
    font-size: 32rpx;
    color: #D0021B;
    height: 44rpx;
    line-height: 44rpx;
    font-weight: 500;
}

