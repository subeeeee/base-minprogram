@import '/assets/css/common.wxss';
page{
    background: #f5f6f8;
}
.list .item{
    background: #fff;
    width: 100%;
    padding: 40rpx 26rpx;
    margin-bottom: 20rpx;
    overflow: hidden;
    color: #4A4A4A;
    position: relative;
    box-sizing: border-box;
}
.item image{
    float: left;
    width: 200rpx;
    height: 140rpx;
    margin-right: 20rpx;
    border-radius: 12rpx;
}
.item .content{
    float: left;
    font-size: 24rpx;
    height: 34rpx;
    line-height: 34rpx;
    width: 400rpx;
}
.content .title{
    font-size: 36rpx;
    height: 50rpx;
    line-height: 50rpx;
    margin-bottom: 10rpx;
}
.content view{
    margin-bottom: 12rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.item .stateImg{
    width: 105rpx;
    height: 105rpx;
    position: absolute;
    left: 0;
    top: 0;
}
.btn{
    width: 140rpx;
    height: 48rpx;
    color: #fff;
    font-size: 24rpx;
    border-radius: 25rpx;
    background-image: linear-gradient(-90deg, #1985F1 2%, #32B8F9 100%, #05BDDE 100%);
    position: absolute;
    right: 28rpx;
    top: 50%;
    transform: translate(0, -50%);
    text-align: center;
    line-height: 48rpx;
}
