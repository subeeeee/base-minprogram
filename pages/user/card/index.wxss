.dl{
  position: relative;
  display: flex;
  margin:0 24rpx;
  border-bottom: 1rpx solid #EEEEEE;
  line-height: 100rpx;
  font-size: 28rpx;
}

.flex{
  flex:1;
}

.dl-icon .flex-arrow-after{
  position: absolute;
  right:0;
  top:0;
  content:'';
  width: 12rpx;
  height: 100%;
  background-position: left center;
  background-repeat: no-repeat;
  background-size: 12rpx 20rpx;
}

.dl144,.dl144:after{
  height: 144rpx;
}

.dt{
  margin-right:10rpx;
  width: 140rpx;
  color: #4A4A4A;
}
.dd input::placeholder{
  color:#bdbdbd;
}
.dd input{
  display: block;
  padding:30rpx;
}

.dl-textarea{
  flex-direction: column;
}
.textarea{
  padding:20rpx;
  line-height: 35rpx;
}
.textarea textarea{
  width:100%;
}

.hegiht20{
  height:20rpx
}
.gray{
  background:#f5f5f5;
}

.save-btn{
  margin:90rpx 75rpx 46rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-image: linear-gradient(270deg, var(--light-color) 2%, var(--dark-color) 100%);
  border-radius: 10rpx;
  color: #fff;
  font-size: 28rpx;
  text-align:center;
}

.dd-margin{
  margin-left:30rpx;
}

.icon{
  width:100rpx;
  height:100rpx;
}

.upload{
  display: flex;
  align-items: center;
}


.dl144 .dt{
  line-height:144rpx;
}

.wxQrCode .icon{
  margin-top:15rpx;
  width: 70rpx;
  height: 70rpx;
}