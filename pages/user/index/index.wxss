@import '/assets/css/common.wxss';
page{
    background: #F5F5F5;
}
.header{
    position: relative;
}
.user{
    position: relative;
    width: 100%;
    height: 200rpx;
    margin-bottom: 20px;
    padding: 50rpx 0 0 40rpx;
    box-sizing: border-box;
    background: #fff;
    overflow: hidden;
}
.user .title,.user .desc{
    font-size:28rpx;
    line-height: 50rpx;
    text-align:left;
    position: relative;
}
.user .headImg{
    width: 100rpx;
    height: 100rpx;
    float: left;
    margin-right: 30rpx;
}
.headImg image{
    width: 100%;
    height: 100%;
    border-radius: 50%;
}
.user .info {
    float: left;
    color: #4a4a4a;
}
.info .title{
    height: 56rpx;
    font-size: 40rpx;
    line-height: 56rpx;
    margin-bottom: 8rpx;
    font-weight: 500;
}

.info .desc{
    height: 40rpx;
    color: #4a4a4a;
    font-size: 28rpx;
    line-height: 40rpx;
    font-weight: 400;
}
.service{
    background: #fff;
    margin-bottom: 20rpx;
    padding: 30rpx 0;
    box-sizing: border-box;
}
.service .title{
    font-size: 36rpx;
    height: 50rpx;
    line-height: 50rpx;
    color: #4a4a4a;
    font-weight: 500;
    margin-bottom: 42rpx;
    text-align: left;
    padding-left: 40rpx;
}
.service .list{
    overflow: hidden;
}
.service .list .item{
    float: left;
    width: 20%;
    text-align: center;
    font-size: 24rpx;
    color: #4a4a4a;
}
.service .list .item image{
    margin: 0 auto 18rpx auto;
    display: block;
}
.service .list .item view{
    height: 24rpx;
    line-height: 24rpx;
}
.service .list .serviceIcon1 image{
    width: 32rpx;
    height: 36rpx;
}
.service .list .serviceIcon2 image{
    width: 40rpx;
    height: 36rpx;
}
.service .list .serviceIcon3 image{
    width: 48rpx;
    height: 38rpx;
}
.service .list .serviceIcon4 image{
    width: 36rpx;
    height: 38rpx;
}
.service .list .serviceIcon5 image{
    width: 40rpx;
    height: 42rpx;
}
.Ulist{
    background: #fff;
    padding: 10rpx 24rpx;
    box-sizing: border-box;
}
.Ulist .Uitem{
    height: 90rpx;
    box-sizing: border-box;
    border-bottom: 2rpx solid #F5F5F5;
    line-height: 90rpx;
    overflow: hidden;
}
.Ulist .Uitem:last-child{
    border-bottom: none;
}
.Uitem .icon{
    width: 40rpx;
    height: 40rpx;
    margin-right: 24rpx;
    float: left;
    margin-top: 25rpx;
}
.Uitem .l{
    float: left;
    color: #4a4a4a;
    font-size: 28rpx;
}
.Uitem .r{
    float: right;
    color: var(--dark-color);
    font-size: 28rpx;
}
.Uitem .rIcon{
    float: right;
    width: 12rpx;
    height: 22rpx;
    margin-top: 35rpx;
    margin-right: 16px;
}
.login{
    color: #999;
    font-size: 24rpx;
    margin-top: 140rpx;
    background: none;
}
.outBtn{
    width: 700rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    color: #fff;
    background:linear-gradient(270deg,var(--dark-color) 0%,var(--light-color) 100%);
    border-radius:5px;
    margin: 0 auto;
}
.counselor{
    width:120rpx;
    height:36rpx;
    position: absolute;
    top:4rpx;
    /* left: 200rpx; */
}
.nickname{
    margin-right:10rpx;
}

.list-last{
    margin-top:44rpx;
}

.service .list-last .serviceIcon6 image{
    width: 40rpx;
    height:40rpx;
}


.service .list-last .serviceIcon7 image{
    width: 40rpx;
    height:42rpx;
}
.service .list-last .serviceIcon9 image{
    margin-top:3rpx;
    margin-bottom:18rpx;
    width: 48rpx;
    height:38rpx;
}
.service .list-last .serviceIcon10 image{
    margin-top:3rpx;
    margin-bottom:18rpx;
    width: 40rpx;
    height:42rpx;
}

.header .next{
  position: absolute;
  right:30rpx;
  top:50%;
  transform: translateY(-50%);
  width: 44rpx;
  height: 34rpx;
  background:url("https://yxf1.juzhouyun.com/xcx_images/serviceIcon8.png") no-repeat left top /100%;
}

button{background:none}