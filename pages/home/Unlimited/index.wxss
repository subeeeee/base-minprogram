@import '/assets/css/common.wxss';

/* 页面专属样式 */

.container {
  background: #f5f6f8;
}


.top-bar-box image{
  width:100%;
  height:100%;
}

/* 全部项目 */
.allProject{
  background: #fff;
  margin-bottom: 20rpx;
  padding: 32rpx 24rpx 24rpx 26rpx;
}
.allProject .title{
  font-size: 36rpx;
  color: #4A4A4A;
  height: 50rpx;
  line-height: 50rpx;
  margin-bottom: 22rpx;
  font-weight: 500;
  overflow: hidden;
}
.allProject .title view text{
  margin-right: 46rpx;
}
.allProject .title image{
  width: 20rpx;
  height: 22rpx;
}
.allProject .project-item {
  width: 100%;
  padding-bottom: 30rpx;
  margin-bottom: 30rpx;
  border-bottom: 2rpx solid #F5F5F5;
  overflow: hidden;
}
.allProject .project-item:last-child{
  border-bottom: 0;
}
.allProject .project-item image{
  float: left;
  width: 270rpx;
  height: 200rpx;
  margin-right: 34rpx;
  border-radius: 12rpx;
}
.allProject .project-item .content{
  float: left;
  width: 390rpx;
}
.project-item .content .name{
  color: #4A4A4A;
  font-size: 36rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-bottom: 6rpx;
  font-weight: 500;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.project-item .content .desc{
  color: #7D7D7D;
  font-size: 28rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-weight: 400;
  margin-bottom: 18rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.project-item .content .tabs{
  margin-bottom: 10rpx;
  overflow: hidden;
  font-weight: 400;
  font-size: 24rpx;
  height: 37rpx;
}
.content .tabs view{
  float: left;
  color: #9B9B9B;
  border: 2rpx solid #9B9B9B;
  border-radius: 4rpx;
  margin-right: 10rpx;
  padding: 0 6rpx;
  height: 32rpx;
  line-height: 32rpx;
  margin-bottom: 10rpx;
}
.content .tabs .status{
  color: #fff;
  background: var(--dark-color);
  border: 2rpx solid var(--dark-color);
}
.tabs .status.waitFor{
  background: #ffac24;
  border: 2rpx solid #ffac24;
}
.tabs .status.shouqing{
  background: #f94641;
  border: 2rpx solid #f94641;
}
.tabs .status.zanwu{
  background: #9b9b9b;
  border: 2rpx solid #9b9b9b;
}
.project-item .content .price{
  font-size: 32rpx;
  color: #D0021B;
  height: 44rpx;
  line-height: 44rpx;
  font-weight: 500;
}

.content .tabs .unlimit{
  background:#fff;
  border:1rpx solid var(--dark-color);
  color:var(--dark-color);
}
