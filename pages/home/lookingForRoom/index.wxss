@import '/assets/css/common.wxss';

/* 页面专属样式 */

.condition{
  padding: 24rpx;
  background: #fff;
}
.condition-item {
  margin-bottom: 24rpx;
}
.title{
  color: #4A4A4A;
  font-size: 36rpx;
  font-weight: 500;
  height: 50rpx;
  line-height: 50rpx;
  margin-bottom: 24rpx;
}
.city{
  width: 100%;
  height: 70rpx;
  margin-bottom: 50rpx;
  background: #F5F6F8;
  box-sizing: border-box;
  padding: 16rpx 0 14rpx 32rpx;
  font-size: 28rpx;
  color: #4A4A4A;
  border-radius: 12rpx;
  overflow: hidden;
}
.city .icon{
  float: right;
  margin: 10rpx 32rpx 0 0;
  width: 12rpx;
  height: 22rpx;
}
.tabs {
  overflow: hidden;
}
.tabs view{
  float: left;
  width: 160rpx;
  height: 60rpx;
  border-radius: 12rpx;
  background: #F5F6F8;
  margin-right: 20rpx;
  margin-bottom: 30rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 24rpx;
  color: #4A4A4A;
  font-weight:400;
}
.tabs view:nth-child(4n+0){
  margin-right: 0;
}
.tabs .active{
  background: var(--dark-color);
  color: #fff;
}
.btn{
  width: 600rpx;
  height: 80rpx;
  margin: 0 auto;
  background:linear-gradient(270deg,var(--dark-color) 0%,var(--light-color) 100%);
  border-radius: 10rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 80rpx;
}
