@import '/assets/css/common.wxss';

/* 页面专属样式 */

.container {
  background: #fff;
}
.nTitle{
	font-weight: bold;
    font-size: 32rpx;
    margin-bottom: 28rpx;
    color: #555;
    margin:30rpx;
}
.nMain{
	line-height: 28rpx;
	margin:30rpx;
	padding-bottom:80rpx;
}
.nBottom{
	  position : fixed;
	  z-index : 1000;
	  right : 0;
	  bottom : 0;
	  left : 0;
	  display : flex;
	  align-items : center;
	  height : 96rpx;
	  background : #fff;
		box-shadow : 0 -4px 12px 0 rgba(0, 0, 0, .07);
		padding:0 20rpx;
}
.tabSaveBtn{
	flex: 3;
	background: -webkit-linear-gradient(left,#1a88f1 0%,#31b5f9 80%,#31b5f9 100%);
	height: 60rpx;
	border-radius: 8rpx;
	display: block;
	/* margin:0 15px; */
	text-align: center;
	line-height: 60rpx;
	color: #fff;
	font-size: 24rpx;
}
.tabBtn {
	flex:0.7;
  padding: 12rpx 6rpx 0;
	text-align: center;
	position: relative;
	font-size: 28rpx;
	line-height: 48rpx;
	background-color: #ffffff;
}
.tabBtn image{
	display: block;
	width: 35rpx;
	height: 35rpx;
	margin: 0 auto;
}
.tabBtn text{
	font-size: 24rpx;
	display: block;
	text-align: center;
	color: #999;
	font-weight: 500;
	line-height: 34rpx;
}
.html-view .p{
	font-size:28rpx;
	line-height: 50rpx;
}
.html-view .strong{
	font-weight: bold;
	color:#000;
}
.html-view image,.zzcFx image{
	width:100%;
}
.shareBox{
	width:100%;
	height:100%;
	position : fixed;
  	z-index : 1001;
  	top:0;
  	left:0;
  	background:rgba(0,0,0,0.7);
}
.zzcFx{
	width:30%;
	float:right;
	position: absolute;
	right:100rpx;
	top:0;
}
.greybg{
	background:#ccc;
}
.signCount{
	margin: 20rpx 10rpx;
	font-size: 24rpx;
	color: #666;
}
.blue{
	color: #3798f1 !important;
	display: inline-block;
}