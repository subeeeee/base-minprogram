@import '/assets/css/common.wxss';
page {
    background: #fff;
}

.form_box {
    padding: 10px 12px 0 12px;
    background: #fff;
    margin-bottom: 40rpx;
}

.label {
    font-size: 36rpx;
    margin: 30rpx 20rpx;
}

.form_item {
    /* height: 60px; */
    box-sizing: border-box;
    border-bottom: 1rpx solid #F5F5F5;
    min-height: 120rpx;
    padding: 0 15px 0 10px;
    display: flex;
    
}


.form_item .form_title {
    width: 95px;
    text-align: left;
    color: #9B9B9B;
    font-size: 16px;
    display: flex;
    justify-content: center;
    align-items: center;
}

.form_item .control {
    width: 100%;
    position: relative;
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
}

picker,
input,
.picker {
    width: 100%;
    height: 100%;
}

.red {
    color: red;
}

.arrowAddr{
    position:absolute;
    width:20rpx;
    height:28rpx;
    top:44rpx;
    right:0;
}
.checkbox-warp{
    height: 500rpx;
}
.checkbox-title{
    /* 全部加起来 高度是100rpx */
    font-size: 30rpx;
    line-height: 40rpx;
    padding: 30rpx 10rpx;
    border-bottom: 1rpx solid #f5f5f5;
}
.checkbox-content{
    height: 400rpx;
    padding: 0 20rpx;
    overflow: auto;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;

}
.checkbox-item{
    display: flex;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    width: 45%;
    margin: 10rpx 2.5%;
    font-size: 26rpx;
    line-height: 30rpx;
    padding: 10rpx;
    text-align: center;
    border: 1rpx solid #858585;
    color: #858585;
    transition: all .2s linear;
    border-radius: 10rpx;
}
.active{
    border: 1rpx solid var(--dark-color);
    color: var(--dark-color);
}
.checkbox-footer{
    height: 120rpx;
    border-top: 1rpx solid #f5f5f5;
    display: flex;
    padding: 30rpx;
    box-sizing: border-box;
    justify-content: center;
    align-items: center;
}
.btn{
    width: 100rpx;
    height: 50rpx;
    font-size: 24rpx;
    line-height: 30rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 10rpx;
    margin: 0 50rpx;
    text-align: center;
    color: var(--dark-color);
    border: 1rpx solid var(--dark-color);

}
.cancel{
    color: var(--dark-color);
    border: 1rpx solid var(--dark-color);
}
.primary{
    color: #fff;
    background-color:var(--dark-color);
    border: 1rpx solid var(--dark-color);
}