page{
  background: #F5F6F8;
}
.form_box {
  padding:0 12px 0 12px;
  background: #fff;
}
.form_item{
  height: 60px;
  box-sizing: border-box;
  border-bottom: 1px solid #F5F5F5;
  line-height: 60px;
  padding: 0 10px;
  display: flex;
}
.form_item:last-child{
  border-bottom: 0;
}
.form_item .form_title{
  width: 95px;
  text-align: left;
  color: #9B9B9B;
  font-size: 16px;
}
.form_item .control{
  width: 100%;
  height: 100%;
  position: relative;
  flex: 1;
}
picker,input{
  width: 100%;
  height: 100%;
}
.control image{
  position: absolute;
}
.btn{
  color: #fff;
  width: 600rpx;
  height: 80rpx;
  background:linear-gradient(270deg, var(--light-color) 0%, var(--dark-color) 100%);
  border-radius:5px;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  position: absolute;
  left: 76rpx;
  bottom: 50rpx;
}
