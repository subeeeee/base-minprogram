/* house box */

.house-box {
  margin-top : 16rpx;
  background-color : #fff;
  padding: 32rpx 46rpx;
}
.house-box .box-hd {
  line-height : 56rpx;
  display : flex;
  align-items : center;
  justify-content : space-between;
  height : 56rpx;
  margin-bottom: 20rpx;
}
.house-box .box-hd .title {
  font-size : 40rpx;
  flex : 1;
  color : #333;
  font-weight: 500;
}
.house-box .box-hd .more {
  font-size : 26rpx;
  color : #999;
}
.house-box .box-hd .more .icon-right-single {
  font-size : 24rpx;
}
.house-box .box-btn-wrap {
  margin-top : 30rpx;
  padding : 0 60rpx;
}
.box-attr-list {
  font-size : 28rpx;
  line-height : 42rpx;
  margin-top: 20rpx;
}
.box-attr-list .attr-item {
  display : flex;
  padding : 6rpx 0 16rpx;
}
.box-attr-list .attr-item .attr-name {
  color : #9f9f9f;
}
.box-attr-list .attr-item .attr-value {
  overflow : hidden;
  flex : 1;
  text-overflow : ellipsis;
  
  display:-webkit-box; 
  
  -webkit-box-orient:vertical;
  
  -webkit-line-clamp:2;
}
.box-attr-list .attr-list-item {
  display : flex;
}
.attr-list-item .attr-item {
  width : 50%;
}
.attr-list-item .attr-item + .attr-item {
  margin-left : 20rpx;
}
.tab-wrap {
  position : fixed;
  z-index : 100;
  top : 0;
  width : 100%;
  height : 72rpx;
  background-color : #fff;
  box-shadow : 0 0 20rpx rgba(0, 0, 0, .1);
}
.tab-hd {
  display : flex;
}
.tab-item {
  font-size : 26rpx;
  line-height : 72rpx;
  position : relative;
  flex : 1;
  height : 72rpx;
  text-align : center;
  color : #323238;
}
.tab-item .border {
  display : none;
}
.tab-item.active .border {
  position : absolute;
  bottom : 0;
  left : 50%;
  display : block;
  width : 48rpx;
  height : 4rpx;
  transform : translateX(-50%);
  background-color : #f7650f;
}
