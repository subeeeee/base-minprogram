.login-popup{
  width:85%;
  padding:0rpx 40rpx 36rpx;
  border-radius: 12rpx;
  text-align: center;
}
.login-popup .h2{
  margin: 100rpx auto 0;
  width:88rpx;
  height:100rpx;
  background:#fff url("https://yxf1.juzhouyun.com/xcx_images/yangguangjun/logo@2x.png") no-repeat center top /100rpx;
}
.login-popup .p{
  margin-top:42rpx;
  font-size:28rpx;
  color: #444;
}
.login-popup .mobile{
  margin-top:10rpx;
  font-size:48rpx;
  color: #4a4a4a;
}
.login-popup .btn{
  margin-top:24rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-image: linear-gradient(270deg, #be6969 2%, #a32a29 100%);
  border-radius: 10rpx;
  color: #fff;
  font-size: 28rpx;
  text-align:center;
}
.login-popup .agree{
  margin-top:24rpx;
  font-size: 24rpx;
}
.login-popup .agree .color{
  color:#a32a29
}
